{
  "hosting": {
    "target": "heroes",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/en",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/en/{,/**}",
        "destination": "/en/index.html"
      },
      {
        "source": "/pl/{,/**}",
        "destination": "/pl/index.html"
      }
    ]
  }
}
